  # Views

  lupeview:
    view: yes
    name: Lupe Robot
    entities:
      - group.lupeactionsarms
      - group.lupeactionslegs
      - group.lupeactivities
      - group.lupelearning

  audioview:
    view: yes
    name: Audio
    entities: 
      - group.audioexhibits
      - group.audiocontrols

  # Groups

  technical:
    name: Technical Center
    entities:
    - script.help

  entrance:
    name: Welcome Center
    entities:
    - script.welcome
    - switch.lupe
    - switch.lupecomplete

  selfies:
    name: Selfies Center
